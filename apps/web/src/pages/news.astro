---
import Base from "../layouts/Base.astro";
import "../styles/pages/news.css";

const lang = "uk";
const title = "АВКУ — Новини";

const posts = [
  { date: "2026-01-28", title: "Новина (приклад)", excerpt: "Короткий опис-заготовка." },
];
---

<Base lang={lang} title={title}>
  <div class="container page">
    <h1 data-translate="news_h1">Новини</h1>
    <p class="lead" data-translate="news_lead">Оновлення організації (приклад).</p>

    <div class="stack">
      {posts.map((p) => (
        <article class="card">
          <div class="meta">{p.date}</div>
          <h2 class="h3">{p.title}</h2>
          <p>{p.excerpt}</p>
        </article>
      ))}
    </div>
  </div>
</Base>
