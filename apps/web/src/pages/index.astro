                decoding="async"
              />
            ) : null}

            <h3>{p.name}</h3>

            {p.url ? (
              <a href={p.url} target="_blank" rel="noopener noreferrer">
                Відвідати сайт
              </a>
            ) : (
              <a href="#" aria-disabled="true" tabindex="-1">
                Відвідати сайт
              </a>
            )}
          </div>
        ))}
      </div>

      <div class="view-more-container">
        <a href="/about" class="btn" aria-label="Дізнатися більше про АВКУ та партнерів">
          Про нас
        </a>
      </div>
    </div>
  </section>

  <!-- LATEST NEWS -->
  <section class="news">
    <div class="container">
      <h2 data-translate="news_header">Останні оновлення</h2>

      <div class="news-items">
        {latestNews.map((n) => (
          <article class="news-item">
            <h3>{n.title}</h3>

            <p class="news-meta">
              <time datetime={n.dateISO} aria-label={n.dateLabel}>{n.dateLabel}</time>
