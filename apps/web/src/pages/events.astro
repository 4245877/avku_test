---
import Base from "../layouts/Base.astro";
import "../styles/pages/events.css";

const lang = "uk";
const title = "АВКУ — Події";

const events = [
  { date: "2026-02-01", title: "Подія (приклад)", place: "Київ / Онлайн" },
];
---

<Base lang={lang} title={title}>
  <div class="container page">
    <h1 data-translate="events_h1">Події</h1>
    <p class="lead" data-translate="events_lead">Список подій (поки що приклад).</p>

    <ul class="list">
      {events.map((e) => (
        <li class="listItem">
          <div class="badge">{e.date}</div>
          <div>
            <div class="itemTitle">{e.title}</div>
            <div class="itemMeta">{e.place}</div>
          </div>
        </li>
      ))}
    </ul>
  </div>
</Base>
