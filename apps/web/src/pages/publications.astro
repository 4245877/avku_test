---
import Base from "../layouts/Base.astro";
import "../styles/pages/publications.css";

const lang = "uk";
const title = "АВКУ — Публікації";

const items = [
  { title: "Публікація (приклад)", href: "#", kind: "PDF/Link" },
];
---

<Base lang={lang} title={title}>
  <div class="container page">
    <h1 data-translate="pubs_h1">Публікації</h1>
    <p class="lead" data-translate="pubs_lead">Матеріали та документи (приклад).</p>

    <ul class="list">
      {items.map((it) => (
        <li class="listItem">
          <div>
            <div class="itemTitle">{it.title}</div>
            <div class="itemMeta">{it.kind}</div>
          </div>
          <a class="btn btn--small" href={it.href} aria-label={it.title} data-translate="pubs_open">
            Відкрити
          </a>
        </li>
      ))}
    </ul>
  </div>
</Base>
